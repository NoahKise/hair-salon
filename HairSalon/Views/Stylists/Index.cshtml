@using HairSalon.Models;
<div class="list">
    <div class="indexRow">
        <h1>Stylists</h1>
        <a href="/stylists/create/">
            <img class="icon" src="~/assets/images/addIcon.png" alt="add icon" />
        </a>
    </div>
    <form asp-controller="Stylists" asp-action="Index">
        <p>
            <input type="text" name="SearchString" placeholder="search" />
            <input type="submit" value="Filter" />
        </p>
    </form>
    <hr />
    @if (@Model.Count == 0)
    {
        <h3>No stylists have been added...</h3>
    }
    @foreach (Stylist stylist in Model)
    {
        <h3>@Html.ActionLink($"{@stylist.Name}", "Details", new { id = stylist.StylistId })</h3>
    }
</div>