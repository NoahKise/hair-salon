@using HairSalon.Models;
@model List<HairSalon.Models.Client>;
<div class="list">
    <h1>Clients</h1>
    <form asp-controller="Clients" asp-action="Index">
        <p>
            <input type="text" name="SearchString" placeholder="search" />
            <input type="submit" value="Filter" />
        </p>
    </form>
    <hr />
    @if (@Model.Count == 0)
    {
        <h3>No clients have been added...</h3>
    }

    @foreach (Client client in Model)
    {
        <h3>@Html.ActionLink($"{@client.Name}", "Details", new { id = client.ClientId }) |
            @client.Stylist.Name</h3>
    }

    @Html.ActionLink("Add new client", "Create", "Clients", null)
</div>